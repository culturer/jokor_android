<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.util.article.CreateArticleActivity">


    <EditText
        android:id="@+id/content"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:hint="分享新鲜事..."
        android:padding="6dp"
        android:background="@drawable/bg_circle1"
        android:gravity="start"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.jaygoo.widget.RangeSeekBar
        android:visibility="invisible"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="6dp"
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:rsb_gravity="center"
        app:rsb_mode="single"
        app:rsb_progress_drawable="@drawable/progress"
        app:rsb_progress_drawable_default="@drawable/progress_defalut"
        app:rsb_thumb_drawable="@drawable/progress_right" />
    <TextView
        android:visibility="gone"
        android:id="@+id/progress_text"
        android:layout_marginBottom="6dp"
        android:text="图片上传中..."
        android:textColor="@color/black"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_below="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/labels"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emoji"
            android:src="@drawable/chat_emoji_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <ImageView
            android:id="@+id/at"
            android:layout_marginStart="6dp"
            android:src="@drawable/at"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <ImageView
            android:id="@+id/video"
            android:padding="3dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/video"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <ImageView
            android:id="@+id/location"
            android:padding="3dp"
            android:layout_marginStart="6dp"
            android:src="@drawable/location"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/show_at_main"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示在主页"
            android:textSize="12sp"
            android:textColor="@color/black"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/show_video"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <cn.jzvd.JzvdStd
            android:layout_marginBottom="10dp"
            android:id="@+id/jz_video"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <ImageView
            android:id="@+id/del"
            android:src="@drawable/close_white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:padding="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

</LinearLayout>