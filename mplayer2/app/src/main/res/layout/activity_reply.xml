<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".pages.util.article.ReplyActivity">

    <LinearLayout
        android:id="@+id/container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:layout_marginStart="6dp"
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_navigate_before_white_24dp" />
        <TextView
            android:id="@+id/toolbar_title"
            android:text="评论(1543)"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/tool_bar_text" />
        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <FrameLayout
            android:id="@+id/add"
            android:background="@drawable/bg_circle_focus"
            android:padding="2dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon1"
                android:layout_gravity="center_vertical"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/logo"/>
            <TextView
                android:text="关注"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:paddingStart="25dp"
                android:paddingEnd="2dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
        </FrameLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/logo"/>

                <TextView
                    android:id="@+id/username"
                    android:text="隔壁老宋宋啊"
                    android:textSize="10sp"
                    android:textColor="@color/grey_dark"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/time"
                    android:text="2018年5月18日"
                    android:textSize="8sp"
                    android:textColor="@color/grey_dark"
                    android:layout_toEndOf="@+id/icon"
                    android:layout_below="@+id/username"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/icon"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/icon"
                    android:text="      人生总是充满了惊喜和失落，有恰到好处的遇见。也有撕心裂肺的怀念，但时间总是向前。没有一丝可怜，不论剧终还是待续。但愿你能以梦为马，不负此生..."
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/grey"/>

            <com.jokor.base.wedgit.NestedListView
                android:padding="6dp"
                android:id="@+id/listview"
                android:transcriptMode="normal"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/chat_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@null"
            android:src="@drawable/chat_emoji_btn" />
        <EditText
            android:padding="@dimen/margin"
            android:layout_margin="@dimen/margin"
            android:id="@+id/chat_edit"
            android:gravity="start"
            android:ems="10"
            android:maxLines="1"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:background="@drawable/bg_circle1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/chat_send"
            android:layout_margin="@dimen/margin"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="@dimen/margin"
            android:clickable="true"
            android:background="@drawable/btn_selected"
            android:text="回复"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>
    <GridView
        android:id="@+id/emoji_grid"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:numColumns="7"
        android:visibility="gone"/>
</LinearLayout>