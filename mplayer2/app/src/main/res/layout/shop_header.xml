                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price3"
                android:text="￥ 23.6"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:layout_marginStart="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img4"
                android:src="@mipmap/p1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/name4"/>

            <TextView
                android:id="@+id/name4"
                android:layout_above="@id/price4"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="奧迪Q2L2018款"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price4"
                android:text="￥ 23.6"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:text="拼团"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/grey"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <RelativeLayout
            android:layout_marginStart="6dp"
            android:background="@color/white"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img5"
                android:src="@mipmap/p1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/name5"/>

            <TextView
                android:id="@+id/name5"
                android:layout_above="@id/price5"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="奧迪Q2L2018款"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price5"
                android:text="￥ 23.6"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginEnd="6dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:layout_marginStart="3dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img6"
                android:src="@mipmap/p1"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/name6"/>

            <TextView
                android:id="@+id/name6"
                android:layout_above="@id/price6"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:text="奧迪Q2L2018款"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price6"
                android:text="￥ 23.6"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
