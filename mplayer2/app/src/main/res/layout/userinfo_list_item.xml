<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="2019.12.20 21:16"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/close"
            android:src="@drawable/close"
            android:padding="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="名称: 一个软件聚合多种功能服务: 打通软件研发管理全流程案例: 无需切换软件解决方案: 免费注册使用
ONES TestCase梳理了测试环节的整体流程,让您的工作更高效,便捷.配合 DevOps 流程,关联自动化测试的代码和执行结果,可免费试用"
        android:textColor="@color/grey_dark"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/imgs"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginEnd="1dp"
            android:scaleType="centerCrop"
            android:id="@+id/img1"
            android:src="@mipmap/p1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <ImageView
            android:src="@mipmap/p10"
            android:layout_marginEnd="1dp"
            android:scaleType="centerCrop"
            android:id="@+id/img2"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp" />
        <ImageView
            android:layout_marginEnd="1dp"
            android:src="@mipmap/p11"
            android:scaleType="centerCrop"
            android:id="@+id/img3"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/fire"
            android:layout_marginStart="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/reword_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:text="45"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:src="@drawable/reply"
            android:layout_marginStart="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/commend_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:gravity="center_vertical"
            android:text="133"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <ImageView
            android:src="@drawable/like"
            android:padding="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/praise_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:gravity="center_vertical"
            android:text="133"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>