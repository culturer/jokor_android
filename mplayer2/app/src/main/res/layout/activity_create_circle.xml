<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".pages.main.main_page.square.circle.circle_create.CreateCircleActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tool_bar"
        android:id="@+id/container"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/OverflowMenuStyle" >
            <TextView
                android:text="新建圈子"
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:letterSpacing="0.5"
                android:textColor="@color/tool_bar_text" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/change_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:src="@drawable/circle_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="设置头像"
            android:textSize="16sp"
            android:textColor="#27323F" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp"
            android:src="@drawable/next" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_name"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="15dp"
            android:text="名称"
            android:textSize="16sp"
            android:textColor="#27323F"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#37C1BC"
            android:layout_marginEnd="6dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/status"
            android:src="@drawable/unknow"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"
            android:padding="3dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </LinearLayout>

    <View
        android:background="@color/white"
        android:layout_width="15dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/belong2"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="15dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="副圈主"
            android:textColor="#27323F"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:textColor="#A8ABBE"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:background="@color/white"
        android:layout_width="15dp"
        android:layout_height="1dp"/>

    <LinearLayout
        android:id="@+id/change_desc"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginStart="15dp"
            android:text="简介"
            android:textSize="16sp"
            android:textColor="#27323F"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="15dp"
            android:gravity="center_vertical"
            android:textColor="#A8ABBE"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>