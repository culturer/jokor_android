<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"/>

    <ImageView
        android:id="@+id/sex"
        android:layout_alignStart="@+id/icon"
        android:layout_alignBottom="@+id/icon"
        android:src="@drawable/female"
        android:layout_width="15dp"
        android:layout_height="15dp" />

    <TextView
        android:text="23岁"
        android:textSize="12sp"
        android:textColor="@color/sex_red"
        android:layout_alignEnd="@+id/icon"
        android:layout_alignBottom="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="隔壁老宋宋啊（宋志文）"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text="tel : 18588263531"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:id="@+id/tv_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_alignStart="@+id/tv_name"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/tv_tel"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="长按头像显示大图长按头像显示大图长按头像显示大图长按头像显示大图长按头像显示大图长按头像显示大图长按头像显示大图。"
        android:textSize="12sp"
        android:textColor="@color/black"/>

    <ImageView
        android:layout_alignBottom="@+id/tv_sign"
        android:layout_alignEnd="@+id/tv_sign"
        android:layout_marginStart="6dp"
        android:src="@drawable/sign_text"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <View
        android:layout_below="@+id/tv_sign"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>

</RelativeLayout>
